{
  "manifest_version": 3,
  "name": "Nature RIS to BibTeX",
  "description": "Automatically converts RIS downloads from Nature and Springer to BibTeX.",
  "version": "1.1",
  "permissions": ["downloads", "activeTab"],
  "host_permissions": [
    "*://*.nature.com/*",
    "*://*.springer.com/*",
    "*://*.springernature.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nature.com/*",
        "*://*.springer.com/*",
        "*://*.springernature.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon1024.png",
    "48": "icons/icon1024.png",
    "128": "icons/icon1024.png"
  }
}
